      <div class="col-xs-12 col-sm-4">
        <div class="flat card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= flat['imageUrl'] %>');">
          <div class="card-description">
            <h2><%= flat['name'] %></h2>
            <p><%= flat['price'] %> â‚¬</p>
          </div>
          <%= link_to '', flat_path(flat['id']), class: 'card-link' %>
